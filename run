#!/usr/bin/env bash

#Deduce this script's directory
if [ -z ${BASH_SOURCE} ]; then
  script_dir=$(readlink -f $(dirname "${0}"))
else
  script_dir="$(cd -P "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
fi

source "${script_dir}/configuration"

echo 'Running'
echo 'Running with java'
echo 'Running c extensioni (java)'
java -jar "${use_jar_path}"
echo

java -Dplaying-with-classpath.debug-build="true" -jar "${use_jar_path}"
echo

echo 'Running rust extension (java)'
java -Dplaying-with-classpath.rust="true" -jar "${use_jar_path}"
echo

java -Dplaying-with-classpath.debug-build="true" \
  -Dplaying-with-classpath.rust="true" \
  -jar "${use_jar_path}"
echo

echo 'Running with gradle'
echo 'Running c extension (gradle)'
./gradlew --quiet run
echo

./gradlew --quiet run -Dplaying-with-classpath.debug-build="true"
echo

echo 'Running rust extension (gradle)'
./gradlew --quiet run -Dplaying-with-classpath.rust="true"
echo

./gradlew --quiet run -Dplaying-with-classpath.rust="true" \
  -Dplaying-with-classpath.debug-build="true"

echo 'Done running'
